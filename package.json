{
  "name": "chrome-extension-react-typescript-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate project to quickly build a Chrome extension using TypeScript and React (built using webpack).",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack --config webpack.dev.js",
    "watch": "webpack -w --config webpack.dev.js",
    "lint": "tslint 'src/**/*.{ts, tsx}'",
    "tslint:prettier-check": "tslint-config-prettier-check ./tslint.json",
    "tslint": "tslint --fix --force --format stylish --project ./tsconfig.json ./{src,__tests__}/**/*.{ts,tsx}",
    "prettier": "prettier --write ./{src,__tests__}/**/*.{ts,tsx}"
  },
  "author": "Joe Martella",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.91",
    "@types/react": "^16.9.13",
    "@types/react-dom": "^16.9.4",
    "css-loader": "^3.2.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.1",
    "ts-loader": "^6.0.4",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.7.2",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@material-ui/core": "^4.7.0",
    "@material-ui/icons": "^4.2.1",
    "@material-ui/styles": "^4.6.0",
    "@types/node": "^12.12.14",
    "@types/react-redux": "^7.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "chrome-extension-async": "^3.3.2",
    "dateformat": "^3.0.3",
    "jss-rtl": "^0.3.0",
    "object-path": "^0.11.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-frame-component": "^4.1.0",
    "react-iframe": "^1.8.0",
    "react-redux": "^7.1.3",
    "react-spring": "^8.0.27",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "toasted-notes": "^3.0.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "es5"
  }
}
